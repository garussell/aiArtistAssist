
<div class="artist-login">
  <p>New to Artist AI Assist? <%= link_to "Click Here to create an account", new_artist_path %></p>
  <h2>Artist login</h2>

  <%= form_with(url: artists_login_path, method: :post, id: "user-login-form", local: true) do |form| %>
    <%= form.label :email, "Email" %>
    <%= form.text_field :email, placeholder: "Enter your email" %>
    <br />
    <%= form.label :password, "Password" %>
    <%= form.password_field :password, placeholder: "Enter your password" %>
    <br />
    <%= form.submit "Login" %>
  <% end %>
</div>